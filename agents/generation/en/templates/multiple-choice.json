{
  "templateType": "multiple-choice",
  "language": "en",
  "requiredFields": [
    "id",
    "type",
    "subject",
    "grade",
    "difficulty",
    "language",
    "question",
    "answers",
    "correctIndex",
    "lehrplan21Code",
    "competencyLevel",
    "timeLimit",
    "tags"
  ],
  "schema": {
    "id": {
      "format": "en_{subject}_grade{1-6}_{number}",
      "example": "en_math_grade3_001"
    },
    "type": {
      "value": "multiple-choice",
      "fixed": true
    },
    "subject": {
      "enum": ["math", "english", "science", "geography", "general"]
    },
    "grade": {
      "type": "integer",
      "min": 1,
      "max": 6
    },
    "difficulty": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "mapping": {
        "1": "very easy",
        "2": "easy",
        "3": "medium",
        "4": "hard",
        "5": "very hard"
      }
    },
    "language": {
      "value": "en",
      "fixed": true
    },
    "question": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500
    },
    "answers": {
      "type": "array",
      "length": 4,
      "itemType": "string"
    },
    "correctIndex": {
      "type": "integer",
      "min": 0,
      "max": 3
    },
    "timeLimit": {
      "type": "integer",
      "unit": "milliseconds",
      "recommended": {
        "grade1-2": 20000,
        "grade3-4": 15000,
        "grade5-6": 12000
      }
    },
    "tags": {
      "type": "array",
      "minItems": 1
    }
  }
}
